    function purchase(level) {
        if (!registered) {
            swal('Notice', 'You are required to complete the registration and then try again.', 'info');
            return;
        }

        contract_usdt.methods.allowance(address, Constants.contract.address).call().then(rs => {
            let allow = new BN(rs);
            if (allow.lt(min_allowance)) {
                // Approve
                contract_usdt.methods.approve(Constants.contract.address, max_amount).send({from: address})
                    .on('receipt', (receipt) => {
                        sync_approve();
                        contract.methods.buy(level).send({from: address})
                            .on('transactionHash', hash => {
                                swal('Success', 'You have purchased successfully. Please wait for blockchain confirmation.', 'success');
                            })
                            .on('error', (err) => {
                                swal('Error', err.message, 'error');
                            });
                    })
                    .on('error', (err) => {
                        console.log(err);
                        swal('Error', err.message, 'error');
                    });
            } else {
                register();
            }
        });
    }

    function load_nft_info(i) {
      contract.methods.price(i).call().then(price => {
          contract.methods.leftAmount(i).call().then(left => {
              $('#nft_' + i + '_price').text(Constants.contract_usdt.to_display_amount(price) + ' USDT / ' + left + ' Left');
          });
      });
    }

    function load_nft_infos() {
      for (let i = 1; i <= 6; i ++) {
          load_nft_info(i);
      }
    }

    call_backs.push(
        function () {
            load_nft_infos();
        }
    );
</script>